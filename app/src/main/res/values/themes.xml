<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyBookshelf" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mainPinkScore</item>
        <item name="colorPrimaryVariant">@color/mainPinkDarker</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="mainTitleColor">@color/white</item>
        <item name="mainTextColor">@color/mainPinkDarker</item>
        <item name="btnBackground" >@color/mainPinkDarker</item>
        <item name="btnBackgroundLighter" >@color/mainPinkDarker</item>
        <item name="scoreTagColor">@color/mainPinkScore</item>

        <item name="bookFormBackgroundColor">@color/mainPinkDarker</item>
        <item name="bookFormTextColor">@color/black</item>
        <item name="statsNumberColor">@color/mainPinkBackgroundDarker</item>
        <item name="dialogBackground">@color/mainPinkBackground</item>
        <item name="statsCardBackground">@color/cardTransparent</item>

        <item name="cardText">@color/mainPinkBackgroundDarker</item>
        <item name="cardTextNotImportant">@color/mainPinkBackgroundDarker</item>
        <item name="cardBackgroundColor">@color/mainPinkBackground</item>
        <item name="cardBackgroundColorDarker">@color/mainPinkBackgroundDark</item>
        <item name="cardSubtitleColor">@color/mainPinkDarker</item>

        <item name="mainColor">@color/mainPink</item>
        <item name="backgroundColor">@color/mainPinkBackground</item>
        <item name="backgroundColorDarker">@color/mainPinkBackgroundDarker</item>
        <item name="mainColorDark">@color/mainPinkDarker</item>
        <item name="textMainColor">#D899FF</item>
        <item name="textColor">@color/white</item>
        <item name="textNotImportant">@color/black</item>

        <item name="bookCompletedColor">@color/mainPink</item>
        <item name="bookOnHoldColor">@color/onholdColorPink</item>
        <item name="bookDroppedColor">@color/droppedColorPink</item>
        <item name="bookReadingColor">@color/readingColorPink</item>
        <item name="bookPlanToReadColor">@color/plantoreadColorPink</item>
    </style>
</resources>